<div class="container">
  <div class="wrapper col-md-12 col-sm-10">
     <p class = "center"><%= notice %></p>

     <h1 class = "center">写真一覧 <br></h1>
     <h1 class="postion"><%= link_to "写真投稿", new_picture_path,class: 'btn btn-info' %></h1>


     <% @pictures.each do |picture| %>
     <div class="row">
      <p class = "one"><%= profile_img(picture.user)%></p>
      <p><strong><%= picture.user.name %></strong></p>
      <p>タイトル:<%= picture.title %></p>
      <p>本文:<%= picture.content %></p>
      <p class = "photo">写真:<%= image_tag picture.avatar %></p>
     <%= link_to "詳細", picture_path(picture.id), class: 'btn btn-default btn-sm btn btn-alert'%>
     <%= link_to "写真を編集する", edit_picture_path(picture.id), class: 'btn btn-default btn-sm btn-success'  %>
     <%= link_to "写真を削除する",picture_path(picture.id),data:{ confirm: '本当に編集していいですか？' },method: :delete, class: 'btn btn-default btn-sm btn btn-danger'  %>
   </div>
  <% end %>
 </div>
</div>
