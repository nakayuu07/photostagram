<div class = "center">
  <div class = "container">
    <div class = "col-md-12">
      <p class = "center"><%= profile_img(@picture.user)%></p>
      <p><strong><%= @picture.user.name %></strong></p>
      <p>タイトル:<%= @picture.title %></p>
      <p>本文:<%= @picture.content %></p>
     <% if current_user != @picture.user &&  @favorite.present? %>
       <%= link_to 'イイね解除', favorite_path(picture_id: @picture.id), method: :delete %>
     <% else %>
       <%= link_to 'イイね', favorites_path(picture_id: @picture.id), method: :post %>
     <% end %>
    </div>
  </div>
</div>
